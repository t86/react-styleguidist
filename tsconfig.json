{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2015",
		"baseUrl": ".",
		"moduleResolution": "node",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./lib",
		"lib": ["dom"],
		"paths": {
			"rsg-components/Styled/*": ["src/client/rsg-components/Styled/Styled"],
			"rsg-components/*": ["src/client/rsg-components/*"],
			"rsg-customTheme": ["src/client/styles/emptyTheme"],
			"rsg-customStyles": ["src/client/styles/emptyStyles"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
